$("#feed_entries_count").html("<%= '(' + @feed_source_entries.count.to_s + ')' %>")
$("#feed_entries").html("<%= escape_javascript(render @feed_source_entries) %>").fadeIn
// If the pagination does not exist yet, we append to 
$("#feed_entries_pagination").replaceWith("<%= escape_javascript(will_paginate @feed_source_entries ) %>")


// The code to show a loading animation while retrieving the feeds
jQuery(function($) {
  
  var fadeInLoading = function() { $("#loading").fadeIn() };
  var fadeOutLoading = function() { $("#loading").fadeOut() };  
  
  $("#feed_source_refresh")
  	.bind("ajax:beforeSend", fadeInLoading)
    .bind("ajax:complete", fadeOutLoading)
});